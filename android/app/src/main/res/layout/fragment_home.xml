<?xml version="1.0" encoding="utf-8"?>
<androidx.swiperefreshlayout.widget.SwipeRefreshLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/swipeRefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="?attr/freetips_screenPaddingHorizontal"
        android:paddingEnd="?attr/freetips_screenPaddingHorizontal"
        android:paddingTop="?attr/freetips_contentTopPadding"
        android:paddingBottom="?attr/freetips_contentBottomPadding">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <include
            android:id="@+id/virtualCardInclude"
            layout="@layout/view_virtual_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="?attr/freetips_cardInsetMargin"
            android:layout_marginEnd="?attr/freetips_cardInsetMargin"
            android:layout_marginTop="?attr/freetips_cardInsetMargin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="?attr/freetips_cardToSectionMargin"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/limits_section_title"
                android:textSize="@dimen/text_title"
                android:textStyle="bold"
                android:textColor="@color/on_surface" />

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/limits_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/section_title_to_content"
                style="@style/Widget.FreeTips.Card"
                android:padding="@dimen/card_padding_large">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/content_inset_horizontal"
                    android:paddingEnd="@dimen/content_inset_horizontal"
                    android:paddingBottom="@dimen/spacing_md">

                    <!-- Заявок в сутки -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_sm"
                        android:text="@string/limits_daily_requests"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp">
                        <TextView
                            android:id="@+id/limits_daily_count_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/on_surface"
                            tools:text="0 из 5" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/limits_daily_count_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_limits_flat" />

                    <!-- Сумма в сутки -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_md"
                        android:text="@string/limits_daily_sum"
                        android:textSize="@dimen/text_caption"
                        android:textColor="@color/on_surface_variant" />
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:paddingTop="4dp">
                        <TextView
                            android:id="@+id/limits_daily_sum_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/on_surface"
                            tools:text="0 ₽ из 10 000 ₽" />
                    </LinearLayout>
                    <ProgressBar
                        android:id="@+id/limits_daily_sum_progress"
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="4dp"
                        android:layout_marginTop="4dp"
                        android:max="100"
                        android:progress="0"
                        android:progressDrawable="@drawable/progress_limits_flat" />

                    <!-- Месячные лимиты (скрыты, если не заданы) -->
                    <LinearLayout
                        android:id="@+id/limits_monthly_block"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_md"
                            android:text="@string/limits_monthly_requests"
                            android:textSize="@dimen/text_caption"
                            android:textColor="@color/on_surface_variant" />
                        <TextView
                            android:id="@+id/limits_monthly_count_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/on_surface"
                            tools:text="0 из 20" />
                        <ProgressBar
                            android:id="@+id/limits_monthly_count_progress"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_limits_flat" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_md"
                            android:text="@string/limits_monthly_sum"
                            android:textSize="@dimen/text_caption"
                            android:textColor="@color/on_surface_variant" />
                        <TextView
                            android:id="@+id/limits_monthly_sum_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="4dp"
                            android:textSize="@dimen/text_body"
                            android:textColor="@color/on_surface"
                            tools:text="0 ₽ из 50 000 ₽" />
                        <ProgressBar
                            android:id="@+id/limits_monthly_sum_progress"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="4dp"
                            android:layout_marginTop="4dp"
                            android:max="100"
                            android:progress="0"
                            android:progressDrawable="@drawable/progress_limits_flat" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
            </LinearLayout>

        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/spacing_lg"
            android:indeterminateTint="@color/primary"
            android:visibility="gone" />
        <TextView
            android:id="@+id/errorText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_md"
            android:visibility="gone"
            android:textColor="@color/error"
            android:textSize="@dimen/text_body" />
    </LinearLayout>
    </ScrollView>
</androidx.swiperefreshlayout.widget.SwipeRefreshLayout>
