<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="?attr/freetips_screenBackground">

    <!-- Шапка: только полоса -->
    <View
        android:id="@+id/header_bar"
        android:layout_width="match_parent"
        android:layout_height="?attr/freetips_headerBarMinHeight"
        android:background="?attr/freetips_headerBarBackground"
        android:elevation="4dp" />

    <!-- Логотип и колокольчик под шапкой, без фона шапки -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingStart="?attr/freetips_headerBarPaddingStart"
        android:paddingEnd="?attr/freetips_headerBarPaddingEnd"
        android:paddingTop="?attr/freetips_headerBarPaddingTop"
        android:paddingBottom="?attr/freetips_headerBarPaddingBottom">

        <include
            android:id="@+id/header_logo"
            layout="@layout/view_logo_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start" />

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1" />

        <FrameLayout
            android:id="@+id/bell_badge_anchor"
            android:layout_width="@dimen/touch_target_min"
            android:layout_height="@dimen/touch_target_min"
            android:gravity="center"
            android:background="@drawable/bg_bell_circle_white"
            android:foreground="?attr/selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="12dp">

            <ImageView
                android:id="@+id/btn_notifications"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_notifications_24"
                android:contentDescription="@string/notifications_title"
                android:scaleType="fitCenter"
                android:clickable="false"
                android:focusable="false"
                android:visibility="visible" />
        </FrameLayout>
    </LinearLayout>

    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/nav_host_fragment"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_graph" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/freetips_bottomNavBackground"
        app:itemIconTint="?attr/freetips_bottomNavIconColor"
        app:itemTextColor="?attr/freetips_bottomNavIconColor"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_nav" />
</LinearLayout>
