<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingStart="@dimen/screen_padding"
                android:paddingEnd="@dimen/screen_padding"
                android:paddingTop="@dimen/content_top_padding"
                android:paddingBottom="@dimen/content_bottom_padding">

                <include
                    android:id="@+id/virtualCardInclude"
                    layout="@layout/view_virtual_card"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/card_inset_margin"
                    android:layout_marginEnd="@dimen/card_inset_margin"
                    android:layout_marginTop="@dimen/card_inset_margin" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/card_to_section_margin"
                    android:text="@string/operations_history"
                    android:textSize="@dimen/text_title"
                    android:textStyle="bold"
                    android:textColor="@color/on_surface" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/section_title_to_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <EditText
                        android:id="@+id/filterAmountFrom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:minHeight="48dp"
                        android:minWidth="120dp"
                        android:maxWidth="160dp"
                        android:hint="@string/operations_filter_amount_from"
                        android:inputType="numberDecimal"
                        android:importantForAutofill="yes"
                        android:autofillHints="creditCardNumber"
                        android:maxLines="1"
                        android:textSize="@dimen/text_body"
                        android:textColor="@color/on_surface"
                        android:textColorHint="@color/on_surface_variant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/bg_filter_edit"
                        android:layout_marginEnd="@dimen/spacing_sm" />

                    <EditText
                        android:id="@+id/filterAmountTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:minHeight="48dp"
                        android:minWidth="120dp"
                        android:maxWidth="160dp"
                        android:hint="@string/operations_filter_amount_to"
                        android:inputType="numberDecimal"
                        android:importantForAutofill="yes"
                        android:autofillHints="creditCardNumber"
                        android:maxLines="1"
                        android:textSize="@dimen/text_body"
                        android:textColor="@color/on_surface"
                        android:textColorHint="@color/on_surface_variant"
                        android:paddingStart="12dp"
                        android:paddingEnd="12dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="10dp"
                        android:background="@drawable/bg_filter_edit"
                        android:layout_marginEnd="@dimen/spacing_sm" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <Button
                        android:id="@+id/filterApply"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/operations_filter_apply"
                        android:textSize="@dimen/text_caption"
                        style="?attr/materialButtonStyle" />
                </LinearLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recycler"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    android:layout_marginTop="@dimen/spacing_md"
                    android:clipToPadding="false"
                    android:paddingBottom="@dimen/spacing_md"
                    android:minHeight="120dp"
                    tools:listitem="@layout/item_transaction" />
            </LinearLayout>
        </androidx.core.widget.NestedScrollView>
    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <ProgressBar
        android:id="@+id/progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminateTint="@color/primary"
        android:visibility="gone" />
    <TextView
        android:id="@+id/errorText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="@dimen/screen_padding"
        android:visibility="gone"
        android:textColor="@color/error"
        android:textSize="14sp" />
</FrameLayout>
