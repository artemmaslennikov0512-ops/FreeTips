# Пример конфига nginx для free-tips.ru
# Скопировать на сервер в /etc/nginx/sites-available/ или /etc/nginx/conf.d/
# и включить: sudo ln -s /etc/nginx/sites-available/nginx-free-tips.ru.conf.example /etc/nginx/sites-enabled/
# Затем: sudo nginx -t && sudo systemctl reload nginx

server {
    listen 80;
    listen [::]:80;
    server_name free-tips.ru www.free-tips.ru;

    location / {
        proxy_pass http://127.0.0.1:3000;
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
    }
}

